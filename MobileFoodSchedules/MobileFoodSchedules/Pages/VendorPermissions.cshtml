@page
@model MobileFoodSchedules.Pages.VendorPermissionsModel
@{
    ViewData["Title"] = "VendorPermissions";

    var vendorNames = ViewData["VendorNames"];
    var mobileFoodPermits = (Permits.MobileFoodPermit[])ViewData["MobileFoodPermits"];
    var mobileFoodSchedules = (Schedules.MobileFoodSchedule[])ViewData["MobileFoodSchedules"];

}

<h1>Vendor Permissions</h1>
<form action="" method="POST" style="margin-top: 50px;">
    <div class="form-group">
        <label style="font-size:20px;" class="control-label" for="search"><strong>Vendor</strong></label>
        <input list="vendors" class="form-control" name="search" id="search" style="width:50%" />
    </div>
    <div class="form-group">
        <input type="submit" value="Search Vendor" class="btn btn-info" />
    </div>
    <datalist id="vendors">
        @foreach (var mobileFoodPermit in ViewBag.vendorNames)

        {
            <option> @mobileFoodPermit </option>
        }

    </datalist>
</form>

@if (Model.vendorSearch == true)
{
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Applicant</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var mobileFoodPermit in Model.mobileFoodPermitsSearch)
            {
                <tr>
                    <td>@mobileFoodPermit.Applicant</td>
                    <td>@mobileFoodPermit.Status</td>
                </tr>
            }
        </tbody>
    </table>
}

